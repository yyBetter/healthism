.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 未登录状态 */
.user-info-unlogin {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
}

.login-guide {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.guide-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.login-now-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07C160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0;
  text-align: center;
  margin: 0;
}

.login-now-btn::after {
  border: none;
}

/* 已登录状态 */
.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-basic-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid #4CAF50;
  background-color: #f5f5f5;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #999999;
}

.settings-btn {
  padding: 20rpx;
  margin: -20rpx;
}

.settings-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 数据统计 */
.stats-row {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #4CAF50;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 目标部分 */
.goals-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  min-height: 400rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.add-goal {
  display: flex;
  align-items: center;
  color: #4CAF50;
  font-size: 28rpx;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.goals-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.goal-card {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx;
}

.goal-info {
  margin-bottom: 16rpx;
}

.goal-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.goal-target {
  font-size: 24rpx;
  color: #666666;
  display: block;
}

.progress-bar {
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-inner {
  height: 100%;
  background: #4CAF50;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #4CAF50;
  text-align: right;
  display: block;
}

/* 空状态提示 */
.empty-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.tips-text {
  font-size: 28rpx;
  color: #999999;
} 