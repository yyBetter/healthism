<view class="container">
  <view class="avatar-section" bindtap="chooseAvatar">
    <image class="avatar" src="{{userInfo.avatarUrl || '/assets/default-avatar.png'}}" mode="aspectFill"></image>
    <text class="change-text">点击更换头像</text>
  </view>

  <view class="form">
    <view class="form-item">
      <text class="label">昵称</text>
      <input 
        type="text"
        placeholder="请输入昵称"
        value="{{userInfo.nickName}}"
        bindinput="inputNickname"
      />
    </view>

    <view class="form-item">
      <text class="label">性别</text>
      <picker 
        bindchange="bindGenderChange" 
        value="{{genderIndex}}" 
        range="{{genderOptions}}"
      >
        <view class="picker">
          {{genderOptions[genderIndex]}}
          <text class="arrow">></text>
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">生日</text>
      <picker 
        mode="date" 
        value="{{birthday}}" 
        start="1900-01-01" 
        end="2023-12-31" 
        bindchange="bindBirthdayChange"
      >
        <view class="picker">
          {{birthday}}
          <text class="arrow">></text>
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">身高 (cm)</text>
      <input 
        type="digit"
        placeholder="请输入身高"
        value="{{height}}"
        bindinput="inputHeight"
      />
    </view>

    <view class="form-item">
      <text class="label">体重 (kg)</text>
      <input 
        type="digit"
        placeholder="请输入体重"
        value="{{weight}}"
        bindinput="inputWeight"
      />
    </view>
  </view>

  <button class="save-btn" bindtap="saveProfile">保存</button>
</view> 