.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 40rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #4CAF50;
  background-color: #ffffff;
}

.change-text {
  font-size: 26rpx;
  color: #666666;
}

.form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333333;
}

input {
  flex: 1;
  height: 100rpx;
  font-size: 28rpx;
  color: #333333;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  color: #999999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn::after {
  border: none;
} 