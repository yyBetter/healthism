.container {
  min-height: 100vh;
  background-color: #ffffff;
  padding: 60rpx 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999999;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.code-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 44rpx;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code-btn.disabled {
  background: #E0E0E0;
  color: #999999;
}

.code-btn::after {
  border: none;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn::after {
  border: none;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
}

.tips-text {
  color: #999999;
}

.link {
  color: #4CAF50;
  display: inline;
} 