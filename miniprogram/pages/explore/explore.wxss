.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 标签栏样式 */
.tabs {
  display: flex;
  background: #ffffff;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.tab {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab.active {
  color: #4CAF50;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 32rpx;
  right: 32rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

/* 动态列表样式 */
.content-area {
  padding: 20rpx;
}

.post-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.post-content {
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.post-image.single {
  grid-column: span 3;
  height: 400rpx;
}

.post-footer {
  display: flex;
  gap: 32rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f5f5f5;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666666;
}

.icon {
  font-size: 32rpx;
}

/* 活动列表样式 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.activity-info {
  flex: 1;
  margin-right: 24rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.activity-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #666666;
}

.participants-info {
  width: 100%;
  max-width: 300rpx;
}

.participants-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
}

.join-btn {
  min-width: 160rpx;
  height: 64rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 32rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.join-btn.disabled {
  background: #E0E0E0;
  color: #999999;
}

.join-btn::after {
  border: none;
} 