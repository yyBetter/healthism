.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.goal-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 当前状态样式 */
.current-status {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.status-item {
  flex: 1;
  text-align: center;
}

.status-item .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.status-item .value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* BMI状态标签 */
.status-item .value.normal {
  color: #4CAF50;
}

.status-item .value.underweight {
  color: #FF9800;
}

.status-item .value.overweight {
  color: #F44336;
}

/* 目标设定区域 */
.goal-setting {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.input-group {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}

.input-group .label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.weight-input {
  flex: 1;
  height: 60rpx;
  font-size: 32rpx;
  color: #333;
  padding: 0 60rpx 0 20rpx;
}

.weight-input::after {
  content: 'kg';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

/* 健康范围提示 */
.health-range {
  margin: 16rpx 0;
  padding: 12rpx 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 64rpx;
}

.range-text {
  font-size: 26rpx;
  color: #666;
  margin: 0;
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.range-tip {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  white-space: nowrap;
  margin-left: 12rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
  line-height: 1;
}

.range-tip.healthy {
  background: #E8F5E9;
  color: #4CAF50;
}

.range-tip.warning {
  background: #FFF3E0;
  color: #FF9800;
}

/* 时间选择器 */
.time-setting {
  margin: 24rpx 0;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.time-setting .label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.time-setting .value {
  color: #4CAF50;
  font-weight: 500;
}

.time-tips {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-tips .tip {
  font-size: 24rpx;
  white-space: nowrap;
  display: flex;
  align-items: center;
}

/* 计划详情 */
.plan-details {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.plan-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.plan-item:last-child {
  border-bottom: none;
}

.plan-item .label {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
  margin-right: 20rpx;
}

.plan-item .value-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.plan-item .value {
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
}

.plan-item .tip {
  font-size: 24rpx;
  margin-left: 8rpx;
  white-space: nowrap;
  color: inherit;
}

.healthy {
  color: #4CAF50;
}

.warning {
  color: #FF9800;
}

/* 健康建议 */
.health-tips {
  margin-top: 30rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 1px solid #E8F5E9;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 12rpx;
  padding-left: 30rpx;
  position: relative;
}

.tip-item::before {
  content: "•";
  position: absolute;
  left: 10rpx;
  color: #4CAF50;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.3s;
}

.submit-btn.warning {
  background: #FF9800;
}

.submit-btn:active {
  opacity: 0.8;
} 